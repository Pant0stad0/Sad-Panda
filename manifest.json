{
    "manifest_version": 3,
    "name": "Sad Panda",
    "version": "2.7",
    "description": "Access to ExHentai",
    "icons": {
        "16": "ico/16.png",
        "32": "ico/32.png",
        "48": "ico/48.png",
        "64": "ico/64.png",
        "128": "ico/128.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://exhentai.org/",
                "*://exhentai.org/#"
            ],
            "js": [
                "js/jquery.min.js",
                "js/bootstrap.min.js",
                "js/vue.min.js",
                "js/vue-on-toast.min.js",
                "js/login.js"
            ],
            "css": [
                "css/bootstrap.min.css",
                "css/vue-on-toast.min.css",
                "css/login.css"
            ]
        },
        {
            "matches": [
                "*://exhentai.org/*"
            ],
            "js": [
                "js/jquery.min.js",
                "js/logout.js"
            ],
            "css": [
                "css/logout.css"
            ]
        }
    ],
    "homepage_url": "https://github.com/HitomaruKonpaku/Sad-Panda",
    "incognito": "split",
    "permissions": [
        "contentSettings",
        "cookies",
        "tabs",
        "notifications",
        "*://e-hentai.org/*",
        "*://*.e-hentai.org/*",
        "*://exhentai.org/*"
    ],
    "web_accessible_resources": [
        "html/*",
        "js/*",
        "img/*"
    ]
}
